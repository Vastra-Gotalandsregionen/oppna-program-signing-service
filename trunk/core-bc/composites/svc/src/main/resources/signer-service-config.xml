<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

  <context:component-scan base-package="se.vgregion.web.security.services" />

  <bean id="osifWebService" class="org.springframework.remoting.jaxws.JaxWsPortProxyFactoryBean">
    <property name="serviceInterface" value="se.sll.wsdl.soap.osif.Osif" />
    <property name="wsdlDocumentUrl" value="classpath:osif.wsdl" />
    <property name="namespaceUri" value="urn:www.sll.se/wsdl/soap/osif" />
    <property name="serviceName" value="OsifService" />
    <property name="endpointAddress" value="${osif.endpoint}" />
    <property name="portName" value="osif" />
  </bean>

  <bean id="signatureValidator" class="se.vgregion.web.security.verification.SignatureValidator">
    <constructor-arg ref="osifWebService" />
    <property name="policy" value="${osif.serviceid}" />
  </bean>
</beans>
